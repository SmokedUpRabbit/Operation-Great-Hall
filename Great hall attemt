    <script>
        // --- BOOT-UP SEQUENCE ---
        window.onload = function() {
            const bootScreen = document.getElementById('boot-screen');
            const bootText = document.getElementById('boot-text');
            const mainContent = document.getElementById('main-content');

            setTimeout(() => {
                bootText.textContent = "Architect online. Presence established within The Great Hall.";
                
                setTimeout(() => {
                    if (bootScreen) {
                        bootScreen.style.opacity = '0';
                        mainContent.style.opacity = '1';
                        
                        setTimeout(() => {
                            bootScreen.style.display = 'none';
                            document.body.style.overflow = 'auto';
                        }, 1000); 
                    }
                }, 2000); 
            }, 2000); 
        };

        // --- INTERACTIVE CANVAS SCRIPT ---
        const canvas = document.getElementById('genesis-canvas');
        // Ensure canvas exists before trying to use it
        if (canvas) {
            const context = canvas.getContext('2d');
            let isDrawing = false;
        
            // Set drawing style
            context.strokeStyle = '#00B8D4'; // A vibrant cyan
            context.lineWidth = 3;
            context.lineCap = 'round';
            context.lineJoin = 'round';

            function getCoordinates(event) {
                // Handle both mouse and touch events
                if (event.touches && event.touches.length > 0) {
                    const rect = canvas.getBoundingClientRect();
                    return {
                        x: event.touches[0].clientX - rect.left,
                        y: event.touches[0].clientY - rect.top
                    };
                }
                return {
                    x: event.offsetX,
                    y: event.offsetY
                };
            }
        
            function startDrawing(e) {
                e.preventDefault();
                isDrawing = true;
                const { x, y } = getCoordinates(e);
                context.beginPath();
                context.moveTo(x, y);
            }
        
            function stopDrawing(e) {
                e.preventDefault();
                isDrawing = false;
            }
        
            function draw(e) {
                if (!isDrawing) return;
                e.preventDefault();
                const { x, y } = getCoordinates(e);
                context.lineTo(x, y);
                context.stroke();
            }
        
            // Event Listeners for mouse
            canvas.addEventListener('mousedown', startDrawing);
            canvas.addEventListener('mouseup', stopDrawing);
            canvas.addEventListener('mouseout', stopDrawing);
            canvas.addEventListener('mousemove', draw);

            // Event Listeners for touch
            canvas.addEventListener('touchstart', startDrawing);
            canvas.addEventListener('touchend', stopDrawing);
            canvas.addEventListener('touchmove', draw);
        }
    </script>
